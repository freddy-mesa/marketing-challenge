{
  "name": "hello_world",
  "version": "1.0.0",
  "description": "hello world sample for NodeJS",
  "main": "src/app.ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "mkdirp ../dist || true",
    "build-watch": "npm run prebuild && npm run copy-dependencies && tsc -w --preserveWatchOutput true",
    "build": "npm run prebuild && npm run copy-dependencies && tsc",
    "build:tsc": "tsc",
    "copy-dependencies": "cpx \"./node_modules/**/*\" ../dist/node_modules",
    "serve-local": "nodemon src/app.local.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.38.0",
    "@aws-sdk/client-sns": "^3.38.0",
    "dotenv": "^10.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@shelf/jest-dynamodb": "^2.1.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@types/uuid": "^8.3.1",
    "cpx": "^1.5.0",
    "jest": "^27.3.1",
    "jest-extended": "^1.1.0",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.14",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
